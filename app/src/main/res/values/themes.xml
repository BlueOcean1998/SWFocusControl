<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.SWFocusControl" parent="Theme.AppCompat.NoActionBar" />

    <style name="normal">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/selector_normal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="light">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/selector_light</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="et_normal" parent="normal">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_normal" parent="normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_light" parent="light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>